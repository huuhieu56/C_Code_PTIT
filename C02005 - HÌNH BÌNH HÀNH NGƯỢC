#include<stdio.h>
#include<math.h>
#include<string.h>

int main(){
    int a, b;
    scanf("%d %d", &a, &b);
    for (int i=0; i<a; i++){
        for (int j=0; j<i; j++){
            printf("~");
        }
        for (int k=0; k<b; k++){
            printf("*");
        }
        printf("\n");
    }
}